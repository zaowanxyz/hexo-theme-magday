.container.tag
  padding: 1rem

  .title
    font-size: 2rem
  
  .tags
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-between
    gap: 10px
    a.link {
      flex: 1 0 auto
      min-width: 64px
      background: #fff
      border: none
      box-shadow: 0px 1px 3px rgba(50,50,50,0.02)
      text-align: center
      font-size: 1.2 * font-size
      padding: 1rem 1.2rem
    }


.tag_title
  font-size: 2rem