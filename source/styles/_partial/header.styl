avatar-size = 4rem

.header {
  padding 2 * gutter-size 10px 2 * gutter-size
  display flex
  justify-content: space-between
  flex-direction column
  align-items flex-start
  margin-bottom 2 * gutter-size
  border-bottom 1px dashed #ddd
  @media mq-mobile{
    flex-direction column
    padding-bottom 0
    margin-bottom 0
  }
}

.header-left {
  display: flex
  flex: 1
}
.header-right {
  width:100%;
  display: flex
  flex: 1
  justify-content: flex-end
  align-items flex-end
  align-self: center

  &ul{
    display: inline-block
  }

  @media mq-mobile{
    padding: 1.2rem 0
  }
}

.avatar {
  width: avatar-size
  height: avatar-size
  background-color: #ffffff
  padding: 5px
  display: flex
  align-items: center
  justify-content: center
  overflow: hidden
  a {
    width: 100%
    height: 100%
    display: block
  }
  img {
    width: 100%
    height: 100%
  }
}

.author {
  flex 1
  margin-left gutter-size
  display flex
  flex-direction column
  justify-content space-between
  padding .3rem 0
}

.author-name {
  font-size: 2 * gutter-size
  font-weight:bold;
}

.about-me {
  color: #666666
}

.navigation {
  clearfix()

  li {
    float left
    margin-left 2rem

    a {
      color color-grey

      &:after {
        display none
      }

      &:hover {
        color color-link
      }
    }
  }
}
