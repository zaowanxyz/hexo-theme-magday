.about-me-mask
  .about-me-wrap
    .about-me__header
      .avatar
        img(src=theme.avatar)
    ul.socials
      each item, name in theme.socials
        li.social-item
          span.label
            img(src='/images/socials/' + name + '.svg', alt=item)
          -var isLink = ['https', 'http', 'www'].some(function (prefix) {
          -  return item.indexOf(prefix) > -1;
          -});
          -if (isLink)
            a(href=url_for(item), target="_blank", title=item)= item
          -else
            span= item
