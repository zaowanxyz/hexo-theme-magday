header.container#header
  .header
    .header-left
      .avatar
        a(href="/")
          img(src=theme.avatar)
      .author
        div.author-name
          a(href="/")=theme.title
        div.about-me=theme.aboutme

    .header-right
      ul.navigation
        each link, text in theme.menu
          li
            a(href=link)=text
            
